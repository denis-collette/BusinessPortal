<?xml version="1.0" encoding="UTF-8" ?>
<!--
  This file defines the high-level navigation of your app, like a tab bar or a flyout menu.
  We'll use a TabBar here for the main sections: Portal, Profile, and Super Admin.
-->
<Shell
    x:Class="BusinessPortal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BusinessPortal.Views;assembly=BusinessPortal"
    Shell.FlyoutBehavior="Disabled"
    Title="BusinessPortal">

    <!-- 
      A TabBar is a common navigation pattern for mobile apps.
      Each Tab represents a main section of your application.
    -->
    <TabBar>
        <!-- Portal Tab -->
        <Tab Title="Portal" Icon="dotnet_bot.svg">
            <ShellContent
                Title="Services"
                ContentTemplate="{DataTemplate local:PortalPage}"
                Route="PortalPage" />
        </Tab>

        <!-- Profile Tab -->
        <Tab Title="Profile" Icon="dotnet_bot.svg">
            <ShellContent
                Title="My Profile"
                ContentTemplate="{DataTemplate local:ProfilePage}"
                Route="ProfilePage" />
        </Tab>

        <!-- Super Admin Tab -->
        <!-- TODO: We will later hide this tab based on the user's role. -->
        <Tab Title="Super Admin" Icon="dotnet_bot.svg">
            <ShellContent
                Title="Admin Panel"
                ContentTemplate="{DataTemplate local:SuperAdminPage}"
                Route="SuperAdminPage" />
        </Tab>
    </TabBar>

</Shell>

