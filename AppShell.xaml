<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BusinessPortal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BusinessPortal.Views;assembly=BusinessPortal"
    Shell.FlyoutBehavior="Disabled">

    <!-- 
        Give the main TabBar a unique route name. This is the target for our
        navigation call after a successful login.
    -->
    <TabBar Route="Main">
        <Tab Title="Portal" Icon="dotnet_bot.png">
            <ShellContent
                Title="Portal"
                ContentTemplate="{DataTemplate views:PortalPage}"
                Route="PortalPage" />
        </Tab>
        <Tab Title="Profile" Icon="dotnet_bot.png">
            <ShellContent
                Title="Profile"
                ContentTemplate="{DataTemplate views:ProfilePage}"
                Route="ProfilePage" />
        </Tab>
        <Tab Title="Super Admin" Icon="dotnet_bot.png">
            <ShellContent
                Title="Super Admin"
                ContentTemplate="{DataTemplate views:SuperAdminPage}"
                Route="SuperAdminPage" />
        </Tab>
    </TabBar>

</Shell>

